{
	"name": "COVID-19-RECTIFY",
	"version": "1.0",
	"description": "Build an COVID-19 restifier!",
	"permissions": ["activeTab", "storage"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.bundle.js"]
		}
	],
	"browser_action": {
		"default_icon": "images/virus.png"
	},
	"background": {
		"scripts": ["background.bundle.js"],
		"persistent": true
	},
	"icons": {
		"16": "images/virus.png",
		"32": "images/virus.png",
		"48": "images/virus.png",
		"128": "images/virus.png"
	},
	"manifest_version": 2
}
